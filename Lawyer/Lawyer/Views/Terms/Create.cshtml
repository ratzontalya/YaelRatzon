@model BE.Term


<!DOCTYPE html>

<html dir="rtl" style="text-align:right">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body dir="rtl" style="text-align:right">
    <br />
    <br />
    <br />
    <br />
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>מונח</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.Label("המושג")
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                @Html.Label("ההסבר")
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="שמור" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div style="text-align:left">
        @Html.ActionLink("חזרה לרשימה", "Index")
    </div>
</body>
</html>
